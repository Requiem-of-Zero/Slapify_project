<!DOCTYPE html>
<html>
  <head>
    <title>Slapify</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script type="text/javascript">
      window.slapLogoURL = "<%= image_url('slapify-logo.png') %>";
      window.revLogoURL = "<%= image_url('slapify-logo-reverse.png') %>";
      window.raveURL = "<%= image_url('rave-background.jpg') %>";
    </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
